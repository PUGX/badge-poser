<script type="text/javascript">
    {% image
    '@PUGXBadgeBundle/Resources/public/js/zeroclipboard/ZeroClipboard.swf'
    %}
    var clip = new ZeroClipboard($('.copy_on_clip'), {moviePath: "{{ asset_url }}" });
    {% endimage %}

    clip.on( 'complete', function ( client, args ) {
        alert("Badges copied to the clipboard.");
    } );
    clip.on( 'noflash', function ( client, args ) {
        alert("Flash support not found.\n please copy:" + args.text );
    } );
    clip.on( 'wrongflash', function ( client, args ) {
        alert("Flash version is too old\n please copy:" + args.text );
    } );
</script>

</body>
</html>
